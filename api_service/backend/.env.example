# CookiePusher API Environment Variables

# Security Keys (REQUIRED)
# Generate strong, unique keys for production
ADMIN_KEY=your-super-secret-admin-key-change-this-in-production
POOL_ACCESS_KEY=your-pool-access-key-change-this-in-production

# Database Configuration
DB_PATH=/root/data/CookiePusher.db

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting (optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Configuration (optional)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_HOST=localhost:8080

# Database Settings
DB_MAX_OPEN_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=5m

# Security Settings
JWT_SECRET=your-jwt-secret-key-change-this-in-production
TOKEN_EXPIRY=24h

# Monitoring (optional)
METRICS_ENABLED=false
METRICS_PATH=/metrics

# Development Settings
DEV_MODE=false
DEBUG=false
